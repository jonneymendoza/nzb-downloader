<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.josh.nzb.downloader"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/ActivityStyleBlue" >
        <activity android:name=".screens.main.LauncherActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.josh.nzb.downloader.screens.sabnzbd.SabSettings" />
        <activity android:name="com.josh.nzb.downloader.screens.main.WelcomeScreen" />
        <activity android:name="com.josh.nzb.downloader.screens.main.MainScreenActivity" />
        <activity android:name="com.josh.nzb.downloader.screens.nzbmatrix.NzbMatrixSettings" />
        
    </application>

</manifest>